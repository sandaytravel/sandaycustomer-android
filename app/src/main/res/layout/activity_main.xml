<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/login_bg">

            <ImageView
                android:id="@+id/imgClose"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_close_black"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="90dp"
                android:gravity="bottom"
                android:orientation="vertical">


                <com.san.app.font.TextViewAirbnb_medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/all_tours_in_your_hand"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/large_text_size" />

                <com.san.app.font.TextViewAirbnb_light
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/it_s_everything_you_ll_ever_need"
                    android:textColor="@color/black_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        card_view:cardElevation="0dp"
                        card_view:cardBackgroundColor="@color/colorPrimary"
                        card_view:cardCornerRadius="14dp">


                        <com.san.app.font.TextViewAirbnb_book
                            android:id="@+id/tvSignup"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/signup"
                            android:textColor="@color/white" />

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        card_view:cardElevation="0dp"
                        card_view:cardBackgroundColor="@color/colorPrimary"
                        card_view:cardCornerRadius="14dp">

                        <com.san.app.font.TextViewAirbnb_book
                            android:id="@+id/tvLogin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/login"
                            android:textColor="@color/white" />
                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>
            <com.san.app.font.TextViewAirbnb_medium
                android:id="@+id/tvSkip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_margin="20dp"
                android:gravity="end"
                android:text="Skip"
                android:visibility="gone"
                android:textColor="@color/black_color"
                android:textSize="@dimen/large_text_size" />

        </FrameLayout>


    </LinearLayout>
</layout>