<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp"
            app:titleTextColor="@android:color/white">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/img_back_view"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="17dp"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/back_white"
                    android:tint="@color/black_color"
                    android:visibility="visible" />

                <com.san.app.font.TextViewAirbnb_book
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Edit Account"
                    android:textColor="@color/black_color"
                    android:textSize="18dp" />

            </FrameLayout>
        </android.support.v7.widget.Toolbar>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:id="@+id/llChangeProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">


                        <com.san.app.font.TextViewAirbnb_book
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="40dp"
                            android:gravity="center_vertical"
                            android:text="Change Avatar"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/med_text_size" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgAvtar"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="-40dp"
                            android:src="@mipmap/noti_img" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:id="@+id/lnMyDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <com.san.app.font.TextViewAirbnb_book
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="My Details"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/med_text_size" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:id="@+id/lnChangePwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">


                        <com.san.app.font.TextViewAirbnb_book
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Password Changes"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/med_text_size" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="25dp"
                    android:background="@color/white"
                    android:orientation="horizontal">


                    <com.san.app.font.TextViewAirbnb_book
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="Logout"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/med_text_size" />


                </LinearLayout>


            </LinearLayout>


        </ScrollView>

    </LinearLayout>
</layout>