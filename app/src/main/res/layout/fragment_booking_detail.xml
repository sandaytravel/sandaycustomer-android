<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <LinearLayout
        android:id="@+id/lnMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/dark_white"
            android:elevation="5dp"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp"
            app:titleTextColor="@android:color/white"
            local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_back_view"
                    android:layout_width="40dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:adjustViewBounds="true"
                    android:padding="5dp"
                    android:src="@mipmap/back_white1"
                    android:tint="@color/black_color"
                    android:visibility="visible" />

                <com.san.app.font.TextViewAirbnb_medium
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="55dp"
                    android:text="Wishlist"
                    android:textColor="@color/app_theme_dark"
                    android:textSize="18dp" />

            </FrameLayout>
        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/rlMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <com.san.app.font.TextViewAirbnb_medium
                            android:id="@+id/tvActivityName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvBookingKey"
                            android:layout_marginRight="4dp"
                            android:layout_toLeftOf="@+id/tvParticipateDate"
                            android:layout_toRightOf="@+id/cardImage"
                            android:maxLines="2"
                            android:text="National Geographic Encounter: "
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/med_text_size" />

                        <com.san.app.font.TextViewAirbnb_light
                            android:id="@+id/tvParticipateDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="end"
                            android:singleLine="true"
                            android:text="24 Jan 2019"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/small_text_size" />

                        <RelativeLayout
                            android:id="@+id/rlImage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvActivityName"
                            android:layout_margin="15dp"
                            android:gravity="center_horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal"
                                android:weightSum="6">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.8"
                                    android:gravity="left"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imgOrdrePlace"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@mipmap/order_placed" />
                                </LinearLayout>

                                <View
                                    android:id="@+id/viewPlaced"
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.2"
                                    android:background="@color/gray" />


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.8"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imgPaymentSuccess"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@mipmap/payment_successfull" />
                                </LinearLayout>

                                <View
                                    android:id="@+id/viewPaymentSuccess"
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.2"
                                    android:background="@color/gray" />


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/imgLastStage"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@mipmap/order_confirm" />
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rlImage"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">


                                <com.san.app.font.TextViewAirbnb_medium
                                    android:id="@+id/tvOrderPalced"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="@string/order_placed"
                                    android:textColor="@color/black_color"
                                    android:textSize="@dimen/small_text_size" />

                                <com.san.app.font.TextViewAirbnb_book
                                    android:id="@+id/tvOrderPalcedDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/small_text_size" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">


                                <com.san.app.font.TextViewAirbnb_medium
                                    android:id="@+id/tvPaymentSuccessfull"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="@string/payment_successful"
                                    android:textColor="@color/black_color"
                                    android:textSize="@dimen/small_text_size" />

                                <com.san.app.font.TextViewAirbnb_book
                                    android:id="@+id/tvPaymentSuccessfullDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/small_text_size" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">


                                <com.san.app.font.TextViewAirbnb_medium
                                    android:id="@+id/tvLastStage"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:gravity="center_horizontal"
                                    android:text="Confirmed"
                                    android:textColor="@color/black_color"
                                    android:textSize="@dimen/small_text_size" />

                                <com.san.app.font.TextViewAirbnb_book
                                    android:id="@+id/tvLastStageDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/small_text_size" />


                            </LinearLayout>


                        </LinearLayout>

                    </RelativeLayout>


                    <com.san.app.font.TextViewAirbnb_medium
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/off_grey"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/order_summary"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/med_text_size" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.4" />

                            <com.san.app.font.TextViewAirbnb_medium
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.9"
                                android:gravity="center_horizontal"
                                android:text="@string/qty"
                                android:textColor="@color/black_color"
                                android:textSize="@dimen/small_text_size" />

                            <com.san.app.font.TextViewAirbnb_medium
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:gravity="center_horizontal"
                                android:text="@string/amount"
                                android:textColor="@color/black_color"
                                android:textSize="@dimen/small_text_size" />

                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rvOptoinsList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:nestedScrollingEnabled="false"
                            android:scrollbars="vertical" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/bg_white" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="5dp"
                                android:gravity="center_vertical"
                                android:weightSum="3">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.2">

                                    <com.san.app.font.TextViewAirbnb_medium
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="1"
                                        android:text="@string/actual_payment"
                                        android:textColor="@color/black_color"
                                        android:textSize="@dimen/med_text_size" />

                                </LinearLayout>

                                <com.san.app.font.TextViewAirbnb_medium
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/app_theme_dark"
                                    android:textSize="@dimen/small_text_size" />

                                <com.san.app.font.TextViewAirbnb_book
                                    android:id="@+id/tvTotal"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.8"
                                    android:gravity="center_horizontal"
                                    android:text="RM 0"
                                    android:textColor="@color/app_theme_dark"
                                    android:textSize="@dimen/med_text_size" />

                            </LinearLayout>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/bg_white" />

                        </LinearLayout>

                        <com.san.app.font.TextViewAirbnb_medium
                            android:id="@+id/tvMerchantNote"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@color/off_grey"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="@string/merchant_note"
                            android:visibility="gone"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/med_text_size" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rvMerchantNoteList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:visibility="gone"
                            android:nestedScrollingEnabled="false"
                            android:scrollbars="vertical" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:weightSum="2">


                            <android.support.v7.widget.CardView
                                android:id="@+id/cardRateActivity"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_weight="1"
                                android:elevation="0dp"
                                android:visibility="visible"
                                card_view:cardBackgroundColor="@color/app_theme_dark"
                                card_view:cardCornerRadius="7dp"
                                card_view:cardElevation="0dp">

                                <com.san.app.font.TextViewAirbnb_medium
                                    android:id="@+id/tvRateActivity"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="17dp"
                                    android:layout_marginRight="17dp"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="@string/rate_activity"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/med_text_size" />

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:id="@+id/cardViewVoucher"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="50dp"
                                android:layout_weight="1"
                                android:elevation="0dp"
                                card_view:cardBackgroundColor="@color/app_theme_dark"
                                card_view:cardCornerRadius="7dp"
                                card_view:cardElevation="0dp">

                                <com.san.app.font.TextViewAirbnb_medium
                                    android:id="@+id/tvViewVoucher"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="17dp"
                                    android:layout_marginRight="17dp"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="@string/view_voucher"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/med_text_size" />

                            </android.support.v7.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                tools:context="com.androidsample.BottomSheetActivity">

            <LinearLayout
                android:id="@+id/bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:orientation="vertical"
                app:behavior_hideable="true"
                app:behavior_peekHeight="80dp"
                app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

                <com.san.app.font.TextViewAirbnb_bold
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:text="@string/merchant_note"
                    android:textColor="@android:color/white" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvMerchantNoteList1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:nestedScrollingEnabled="false"
                    android:scrollbars="vertical" />
            </LinearLayout>
            </android.support.design.widget.CoordinatorLayout>

            <!--<LinearLayout
                android:id="@+id/lnNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@color/off_white"
                android:padding="10dp">

                <com.san.app.font.TextViewAirbnb_medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Merchant Note: "
                    android:textSize="@dimen/med_text_size"
                    android:textColor="@color/black_color"/>

                <com.san.app.font.TextViewAirbnb_book
