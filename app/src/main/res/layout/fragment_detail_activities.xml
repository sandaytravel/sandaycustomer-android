<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/login_btn_bg">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="@color/dark_white"
                app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <!--<LinearLayout
                    android:id="@+id/lnMain"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:orientation="vertical"
                    android:visibility="gone">


                </LinearLayout>-->

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp">

                    <ImageView
                        android:id="@+id/imgMain"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:scaleType="fitXY"
                        app:layout_collapseMode="parallax" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#50000000" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_gravity="bottom"
                        android:background="@color/app_theme_dark"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <com.san.app.font.TextViewAirbnb_medium
                            android:id="@+id/tvActivityName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:maxLines="2"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/large_text_size" />


                    </LinearLayout>

                </FrameLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:contentInsetEnd="0dp"
                    app:contentInsetStart="0dp"
                    android:elevation="5dp"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_back_view"
                            android:layout_width="40dp"
                            android:layout_height="28dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:adjustViewBounds="true"
                            android:padding="5dp"
                            android:src="@mipmap/back_white1"
                            android:tint="@color/white"
                            android:visibility="visible" />


                        <com.san.app.font.TextViewAirbnb_bold
                            android:id="@+id/tvTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_centerVertical="true"
                            android:visibility="gone"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_toRightOf="@+id/img_back_view"
                            android:layout_toLeftOf="@+id/imgright"
                            android:textColor="@color/app_theme_dark"
                            android:textSize="@dimen/large_text_size" />

                        <ImageView
                            android:id="@+id/imgSearch"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:layout_toLeftOf="@+id/imgright"
                            android:src="@mipmap/search_white_img"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/imgrightShare"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/imgright"
                            android:src="@drawable/ic_share_img"
                            android:tint="@color/white"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/imgright"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="18dp"
                            android:layout_marginTop="8dp"
                            android:src="@mipmap/cart_white"
                            android:visibility="visible" />

                        <FrameLayout
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/cart_badge"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="top|center_horizontal"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/circle"
                                android:backgroundTint="@color/colorAccent"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                        </FrameLayout>


                    </RelativeLayout>
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">


                        <com.san.app.font.TextViewAirbnb_book
                            android:id="@+id/tvSubTitleActivity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/med_text_size" />


                        <LinearLayout
                            android:id="@+id/lnPriceSection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvSubTitleActivity"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:gravity="left|center_vertical"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <com.san.app.font.TextViewAirbnb_bold
                                android:id="@+id/tvDisplayPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="RM 400.00"
                                android:textColor="@color/app_theme_dark"
                                android:textSize="@dimen/large_text_size" />

                            <com.san.app.font.TextViewAirbnb_book
                                android:id="@+id/tvActualPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/tvDisplayPrice"
                                android:layout_marginLeft="8dp"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/tvDisplayPrice"
                                android:textColor="@color/light_gray"
                                android:textSize="@dimen/small_text_size" />


                            <RelativeLayout
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:background="@mipmap/white_shadow_circle"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/imgWish"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@mipmap/wish_img"
                                    android:tint="@color/app_theme_dark" />

                            </RelativeLayout>

                            </RelativeLayout>
                        </LinearLayout>


                        <com.san.app.font.TextViewAirbnb_book
                            android:id="@+id/tvPriceGuarantee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lnPriceSection"
                            android:text="San Price Guarantee"
                            android:textSize="@dimen/med_text_size"
                            android:visibility="gone" />


                        <LinearLayout
                            android:id="@+id/lnPolicyDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lnPriceSection"
                            android:layout_marginTop="15dp"
                            android:background="@color/bg_white"
                            android:orientation="vertical"
                            android:padding="15dp"
                            android:visibility="gone" />


                        <LinearLayout
                            android:id="@+id/lnDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lnPolicyDetail"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical">


                            <com.san.app.font.TextViewAirbnb_book
                                android:id="@+id/tvDesc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black_color"
                                android:textSize="@dimen/med_text_size"
                                android:visibility="gone" />

                            <WebView
                                android:id="@+id/webDesc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                tools:ignore="WebViewLayout" />


                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/lnReviewsMain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <com.san.app.font.TextViewAirbnb_medium
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:background="@color/app_theme_dark"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="@string/reviews"
                            android:textColor="@color/white"
                            android:textSize="@dimen/med_text_size"
                            android:visibility="gone" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <com.san.app.font.TextViewAirbnb_medium
                                android:id="@+id/tvReviewAvg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="2dp"
                                android:text="4.5"
                                android:textColor="@color/black_color"
                                android:textSize="30sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="80dp"
                                android:layout_toRightOf="@+id/tvReviewAvg">

                                <RatingBar
                                    android:id="@+id/ratingBar"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:numStars="5"
                                    android:rating="2.0"
                                    android:stepSize="1.0"
                                    android:theme="@style/RatingBar" />
                            </LinearLayout>

                            <com.san.app.font.TextViewAirbnb_bold
                                android:id="@+id/tvTotalReview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="-70dp"
                                android:layout_marginTop="2dp"
                                android:text="112 reviews"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/small_text_size" />

                        </RelativeLayout>

                        <com.san.app.font.TextViewAirbnb_book
                            android:id="@+id/tvReadReviews"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="@string/read_all_reviews"
                            android:textColor="@color/app_theme_dark"
                            android:textSize="@dimen/med_text_size" />


                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rvReviewsList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="-5dp"
                            android:layout_marginRight="-5dp"
                            android:nestedScrollingEnabled="false"
                            android:scrollbars="vertical" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/lnPackageOptionMain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">


                        <com.san.app.font.TextViewAirbnb_medium
                            android:id="@+id/tvPackageOptions"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:background="@color/app_theme_dark"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="@string/package_options"
                            android:textColor="@color/white"
                            android:textSize="@dimen/med_text_size"
                            android:visibility="visible" />


                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rvPackageOptionsList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:nestedScrollingEnabled="false"
                            android:scrollbars="vertical" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/lnWhatMain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">


                        <com.san.app.font.TextViewAirbnb_medium
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:background="@color/app_theme_dark"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="@string/what_to_expect"
                            android:textColor="@color/white"
                            android:textSize="@dimen/med_text_size"
                            android:visibility="visible" />


                        <com.san.app.font.TextViewAirbnb_book
                            android:id="@+id/tvWhatToExpect"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/med_text_size"
                            android:visibility="gone" />

                        <WebView
                            android:id="@+id/webWhatToExpect"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="15dp"/>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/lnActivityInfoMain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">


                        <com.san.app.font.TextViewAirbnb_medium
                            android:id="@+id/tvActivityInfo"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:background="@color/app_theme_dark"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="@string/activity_information"
                            android:textColor="@color/white"
                            android:textSize="@dimen/med_text_size"
                            android:visibility="visible" />



                        <com.san.app.font.TextViewAirbnb_book
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/med_text_size"
                            android:visibility="gone" />

                        <WebView
                            android:id="@+id/webActivityInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="15dp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/lnHowToUseMain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">


                        <com.san.app.font.TextViewAirbnb_medium
                            android:id="@+id/tvHowToUse"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:background="@color/app_theme_dark"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="@string/how_to_use"
                            android:textColor="@color/white"
                            android:textSize="@dimen/med_text_size"
                            android:visibility="visible" />


                        <com.san.app.font.TextViewAirbnb_book
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/med_text_size"
                            android:visibility="gone" />

                        <WebView
                            android:id="@+id/webHowToUse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="15dp"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/lnCancelPolicyMain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">


                        <com.san.app.font.TextViewAirbnb_medium
                            android:id="@+id/tvCancelPolicy"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:background="@color/app_theme_dark"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="@string/cancelation_policy"
                            android:textColor="@color/white"
                            android:textSize="@dimen/med_text_size"
                            android:visibility="visible" />



                        <com.san.app.font.TextViewAirbnb_book
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/med_text_size"
                            android:visibility="gone" />

                        <WebView
                            android:id="@+id/webCancelPolicy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="15dp"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/lnFAQMain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">


                        <com.san.app.font.TextViewAirbnb_medium
                            android:id="@+id/tvFAQPolicy"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:background="@color/app_theme_dark"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="@string/faqs"
                            android:textColor="@color/white"
                            android:textSize="@dimen/med_text_size"
                            android:visibility="visible" />



                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rvFaqList"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:nestedScrollingEnabled="false"
                            android:scrollbars="vertical" />


                    </LinearLayout>
                </LinearLayout>


        </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/lnBottomBtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardAddCart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:elevation="0dp"
                    card_view:cardBackgroundColor="@color/yellow"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardElevation="0dp">

                    <com.san.app.font.TextViewAirbnb_medium
                        android:id="@+id/tvAddCart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="@string/add_to_cart"
                        android:textColor="@color/white"
                        android:textSize="@dimen/med_text_size" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardBookNow"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:elevation="0dp"
                    card_view:cardBackgroundColor="@color/orange"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardElevation="0dp">

                    <com.san.app.font.TextViewAirbnb_medium
                        android:id="@+id/tvBookNow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="@string/book_now"
                        android:textColor="@color/white"
                        android:textSize="@dimen/med_text_size" />
                </android.support.v7.widget.CardView>


            </LinearLayout>


        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>
</layout>