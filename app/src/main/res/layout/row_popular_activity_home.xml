<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/lnMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:padding="10dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="10dp"
            android:elevation="2dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            card_view:cardElevation="2dp"
            card_view:cardPreventCornerOverlap="false">>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    card_view:cardCornerRadius="8dp">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="7dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:paddingLeft="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <com.san.app.font.TextViewAirbnb_medium
                                android:id="@+id/tvTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:text="Peak Tram Fast-Track sdfsd fsdfdf Combo"
                                android:textColor="@color/black_color"
                                android:textSize="@dimen/small_text_size" />

                            <LinearLayout
                                android:id="@+id/lnReview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/ic_rating_img"
                                    android:tint="@color/yellow" />

                                <com.san.app.font.TextViewAirbnb_book
                                    android:id="@+id/tvAvgReview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="4.5"
                                    android:textColor="@color/black_color"
                                    android:textSize="@dimen/med_text_size" />

                                <com.san.app.font.TextViewAirbnb_light
                                    android:id="@+id/tvTotalReview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:maxLines="1"
                                    android:text="(20k reviews)"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/x_small_text_size" />

                            </LinearLayout>

                            <com.san.app.font.TextViewAirbnb_book
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:visibility="gone"
                                android:text="Available Today"
                                android:textColor="@color/black_color"
                                android:textSize="@dimen/x_small_text_size" />
                            <com.san.app.font.TextViewAirbnb_book
                                android:id="@+id/tvTotalBooked"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="999k+ Booked"
                                android:textColor="@color/black_color"
                                android:textSize="@dimen/x_small_text_size" />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:gravity="center"
                        android:orientation="vertical">




                            <com.san.app.font.TextViewAirbnb_bold
                                android:id="@+id/tvDisplayPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="$ 647 "
                                android:gravity="center_horizontal"
                                android:textColor="@color/app_theme_dark"
                                android:textSize="@dimen/x_small_text_size" />

                            <com.san.app.font.TextViewAirbnb_light
                                android:id="@+id/tvActualPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:gravity="center_horizontal"
                                android:text="$ 647 "
                                android:textColor="@color/black_color"
                                android:textSize="@dimen/x_small_text_size" />



                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</layout>
