<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/lnMain"
        android:layout_width="280dp"
        android:layout_height="230dp"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            card_view:cardBackgroundColor="@color/bg_white"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="165dp">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="165dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop" />


                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:background="@color/app_theme_dark"
                    android:orientation="vertical"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:weightSum="2">

                    <com.san.app.font.TextViewAirbnb_medium
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Peak Tram Fast-Track Combo"
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="2dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <LinearLayout
                                android:id="@+id/lnReview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/ic_rating_img"
                                    android:tint="@color/yellow" />

                                <com.san.app.font.TextViewAirbnb_book
                                    android:id="@+id/tvAvgReview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="4.5"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/small_text_size" />

                                <com.san.app.font.TextViewAirbnb_light
                                    android:id="@+id/tvTotalReview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:maxLines="1"
                                    android:text="(20k reviews)"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/x_small_text_size" />


                            </LinearLayout>

                            <com.san.app.font.TextViewAirbnb_book
                                android:id="@+id/tvTotalBooked"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="999k+ Booked"
                                android:textColor="@color/white"
                                android:textSize="@dimen/x_small_text_size" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:orientation="vertical">

                            <com.san.app.font.TextViewAirbnb_bold
                                android:id="@+id/tvDisplayPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$ 647 "
                                android:textColor="@color/white"
                                android:textSize="@dimen/small_text_size" />

                            <com.san.app.font.TextViewAirbnb_light
                                android:id="@+id/tvActualPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$ 647 "
                                android:textColor="@color/black_color"
                                android:textSize="@dimen/x_small_text_size" />


                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</layout>
