<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/lnMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <com.san.app.font.TextViewAirbnb_medium
                android:id="@+id/tvBookingKey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:text="@string/booking_ref_id"
                android:textColor="@color/black_color"
                android:textSize="@dimen/small_text_size" />

            <com.san.app.font.TextViewAirbnb_book
                android:id="@+id/tvBookingNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_toLeftOf="@+id/tvParticipateDate"
                android:layout_toRightOf="@+id/tvBookingKey"
                android:singleLine="true"
                android:text="123343333"
                android:textColor="@color/black_color"
                android:textSize="@dimen/small_text_size" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardImage"
                android:layout_width="72dp"
                android:layout_height="75dp"
                android:layout_below="@+id/tvBookingKey"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                card_view:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/imgPlace"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
            </android.support.v7.widget.CardView>


            <com.san.app.font.TextViewAirbnb_medium
                android:id="@+id/tvActivityName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvBookingKey"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="4dp"
                android:layout_toLeftOf="@+id/tvParticipateDate"
                android:layout_toRightOf="@+id/cardImage"
                android:maxLines="2"
                android:text="National Geographic Encounter: "
                android:textColor="@color/black_color"
                android:textSize="@dimen/small_text_size" />

            <com.san.app.font.TextViewAirbnb_light
                android:id="@+id/tvParticipateDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tvBookingKey"
                android:layout_marginTop="6dp"
                android:gravity="end"
                android:singleLine="true"
                android:text="24 Jan 2019"
                android:textColor="@color/black_color"
                android:textSize="@dimen/x_small_text_size" />

            <com.san.app.font.TextViewAirbnb_light
                android:id="@+id/tvPackageSelectedName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvActivityName"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/cardImage"
                android:singleLine="true"
                android:text="National Geographic Encounter: Ocean Odyssey Admission Ticket in New York"
                android:textColor="@color/black_color"
                android:textSize="@dimen/small_text_size"
                android:visibility="gone" />

            <com.san.app.font.TextViewAirbnb_light
                android:id="@+id/tvQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvActivityName"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="6dp"
                android:layout_toLeftOf="@+id/tvPrice"
                android:layout_toRightOf="@+id/cardImage"
                android:singleLine="true"
                android:text="2 Person(Adult)"
                android:textColor="@color/black_color"
                android:textSize="@dimen/small_text_size" />


            <com.san.app.font.TextViewAirbnb_book
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tvActivityName"
                android:layout_centerVertical="true"
                android:layout_marginTop="6dp"
                android:singleLine="true"
                android:text="RM 5000.00"
                android:textColor="@color/app_theme_dark"
                android:textSize="@dimen/small_text_size" />

            <LinearLayout
                android:id="@+id/lnStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvQuantity"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="6dp"
                android:layout_toLeftOf="@+id/cardVoucherCode"
                android:layout_toRightOf="@+id/cardImage"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgStatus"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="4dp"
                    android:src="@mipmap/circle_view_img" />

                <com.san.app.font.TextViewAirbnb_book
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/pending_payment"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/small_text_size" />
            </LinearLayout>


            <android.support.v7.widget.CardView
                android:id="@+id/cardVoucherCode"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tvQuantity"
                android:layout_gravity="top"
                android:layout_marginTop="6dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:elevation="0dp"
                android:visibility="gone"
                card_view:cardBackgroundColor="@color/app_theme_dark"
                card_view:cardCornerRadius="14dp"
                card_view:cardElevation="0dp"
                card_view:cardPreventCornerOverlap="false">>


                <com.san.app.font.TextViewAirbnb_book
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:singleLine="true"
                    android:text="View voucher"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_text_size" />

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/lnGiftView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tvQuantity">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/gift_voucher_img"/>

                <com.san.app.font.TextViewAirbnb_medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Redeem"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/app_theme_dark"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:visibility="gone">


                <com.san.app.font.TextViewAirbnb_medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="@string/book_date"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/small_text_size" />

                <com.san.app.font.TextViewAirbnb_light
                    android:id="@+id/tvbookingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:singleLine="true"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/small_text_size" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">

                    <com.san.app.font.TextViewAirbnb_medium
                        android:id="@+id/tvWriteReview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/app_theme_dark"
                        android:padding="5dp"
                        android:text="@string/write_review"
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_text_size" />

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
        <View
            android:id="@+id/viewBottom"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="5dp"
            android:background="@color/black_color"/>

    </LinearLayout>
</layout>
