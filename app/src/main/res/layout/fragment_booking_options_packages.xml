<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:local="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/dark_white"
            android:elevation="5dp"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp"
            app:titleTextColor="@android:color/white"
            local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_back_view"
                    android:layout_width="40dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:adjustViewBounds="true"
                    android:padding="5dp"
                    android:src="@mipmap/back_white1"
                    android:tint="@color/black_color"
                    android:visibility="visible" />

                <com.san.app.font.TextViewAirbnb_bold
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="55dp"
                    android:text="@string/booking_options"
                    android:textColor="@color/app_theme_dark"
                    android:textSize="18dp" />

            </FrameLayout>
        </android.support.v7.widget.Toolbar>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/bg_white"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.san.app.font.TextViewAirbnb_medium
                            android:id="@+id/tvPkgTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/cardEditPackage"
                            android:maxLines="2"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/med_text_size" />

                        <android.support.v7.widget.CardView
                            android:id="@+id/cardEditPackage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:layout_centerVertical="true"
                            android:elevation="0dp"
                            android:layout_alignParentRight="true"
                            card_view:cardBackgroundColor="#23c6c8"
                            card_view:cardCornerRadius="10dp"
                            card_view:cardElevation="0dp">

                            <com.san.app.font.TextViewAirbnb_medium
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:maxLines="1"
                                android:text="@string/edit"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:paddingLeft="18dp"
                                android:paddingRight="18dp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/small_text_size" />
                        </android.support.v7.widget.CardView>


                        <com.san.app.font.TextViewAirbnb_bold
                            android:id="@+id/tvDisplayPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="RM eree"
                            android:visibility="gone"
                            android:textColor="@color/app_theme_dark"
                            android:textSize="@dimen/small_text_size" />

                        <com.san.app.font.TextViewAirbnb_light
                            android:id="@+id/tvActualPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/tvDisplayPrice"
                            android:text="sdfsd"
                            android:visibility="gone"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/small_text_size" />

                    </RelativeLayout>


                    <com.san.app.font.TextViewAirbnb_light
                        android:id="@+id/tvDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/small_text_size"
                        android:visibility="gone" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnSelectDate"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/bg_white"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <com.san.app.font.TextViewAirbnb_medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/select_date"
                            android:layout_alignParentLeft="true"
                            android:maxLines="1"
                            android:layout_marginRight="7dp"
                            android:layout_toLeftOf="@+id/tvOpenCalender"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/med_text_size" />

                        <com.san.app.font.TextViewAirbnb_book
                            android:id="@+id/tvOpenCalender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:maxLines="1"
                            android:text="@string/please_select_a_participation_date"
                            android:textSize="@dimen/med_text_size" />

                    </RelativeLayout>


                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/lnNormalView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <com.san.app.font.TextViewAirbnb_medium
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/bg_white"
                            android:gravity="center_vertical"
                            android:padding="10dp"
                            android:text="@string/package_quantity"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/med_text_size" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.4" />

                            <com.san.app.font.TextViewAirbnb_medium
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.9"
                                android:gravity="center_horizontal"
                                android:text="@string/qty"
                                android:textColor="@color/black_color"
                                android:textSize="@dimen/small_text_size" />

                            <com.san.app.font.TextViewAirbnb_medium
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:gravity="center_horizontal"
                                android:text="@string/amount"
                                android:textColor="@color/black_color"
                                android:textSize="@dimen/small_text_size" />

                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rvOptoinsList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:nestedScrollingEnabled="false"
                            android:scrollbars="vertical" />

                        <com.san.app.font.TextViewAirbnb_book
                            android:id="@+id/tvNotValidPackage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:visibility="gone"
                            android:textColor="@color/cancel"
                            android:layout_margin="40dp"
                            android:text="@string/selected_package_might_be_not_availalbe_longer_so_please_pick_another_one"
                            android:textSize="@dimen/med_text_size" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/bg_white" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="5dp"
                                android:gravity="center_vertical"
                                android:weightSum="3">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.4">

                                    <com.san.app.font.TextViewAirbnb_medium
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="1"
                                        android:text="@string/total"
                                        android:textColor="@color/black_color"
                                        android:textSize="@dimen/med_text_size" />

                                </LinearLayout>

                                <com.san.app.font.TextViewAirbnb_medium
                                    android:id="@+id/tvTotalQuantity"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:gravity="center_horizontal"
                                    android:text="0"
                                    android:textColor="@color/app_theme_dark"
                                    android:textSize="@dimen/small_text_size" />

                                <com.san.app.font.TextViewAirbnb_book
                                    android:id="@+id/tvTotal"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:gravity="center_horizontal"
                                    android:text="RM 0"
                                    android:textColor="@color/app_theme_dark"
                                    android:textSize="@dimen/med_text_size" />

                            </LinearLayout>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/bg_white" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="40dp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <android.support.v7.widget.CardView
                                    android:id="@+id/cardAddCart"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginRight="8dp"
                                    android:layout_weight="1"
                                    android:elevation="0dp"
                                    card_view:cardBackgroundColor="@color/gray"
                                    card_view:cardCornerRadius="7dp"
                                    card_view:cardElevation="0dp">

                                    <com.san.app.font.TextViewAirbnb_medium
                                        android:id="@+id/tvAddCart"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:maxLines="1"
                                        android:text="@string/add_to_cart"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/med_text_size" />

                                </android.support.v7.widget.CardView>

                                <android.support.v7.widget.CardView
                                    android:id="@+id/cardBookNow"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginLeft="8dp"
                                    android:layout_weight="1"
                                    android:elevation="0dp"
                                    card_view:cardBackgroundColor="@color/gray"
                                    card_view:cardCornerRadius="7dp"
                                    card_view:cardElevation="0dp">

                                    <com.san.app.font.TextViewAirbnb_medium
                                        android:id="@+id/tvBookNow"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:maxLines="1"
                                        android:text="@string/book_now"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/med_text_size" />
                                </android.support.v7.widget.CardView>

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnFreePurchase"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="2">

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:elevation="0dp"
                            android:visibility="invisible"
                            card_view:cardBackgroundColor="@color/gray"
                            card_view:cardCornerRadius="7dp"
                            card_view:cardElevation="0dp">

                            <com.san.app.font.TextViewAirbnb_medium
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="@string/add_to_cart"
                                android:textColor="@color/white"
                                android:textSize="@dimen/med_text_size" />

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/cardFreePurchase"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:elevation="0dp"
                            android:visibility="visible"
                            card_view:cardBackgroundColor="@color/orange"
                            card_view:cardCornerRadius="7dp"
                            card_view:cardElevation="0dp">

                            <com.san.app.font.TextViewAirbnb_medium
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:text="@string/next"
                                android:textColor="@color/white"
                                android:textSize="@dimen/med_text_size" />

                        </android.support.v7.widget.CardView>

                    </LinearLayout>




                    <LinearLayout
                        android:id="@+id/lnCalenderView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:visibility="gone">

                        <com.ptrstovka.calendarview2.CalendarView2
                            android:id="@+id/calendarView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/bg_white" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>
</layout>