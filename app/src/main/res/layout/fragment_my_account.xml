<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/account_bg"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--<ImageView
                android:id="@+id/imgBg"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:gravity="center_horizontal">

                    <FrameLayout
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:background="@mipmap/user_bg">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgUserImg"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/user_img" />

                    </FrameLayout>


                </LinearLayout>

                <com.san.app.font.TextViewAirbnb_bold
                    android:id="@+id/tvGuest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:text="@string/login_signup"
                    android:textColor="@color/app_theme_dark"
                    android:textSize="@dimen/x_large_text_size" />


                <com.san.app.font.TextViewAirbnb_bold
                    android:id="@+id/tvUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/app_theme_dark"
                    android:textSize="@dimen/x_large_text_size" />


                <LinearLayout
                    android:id="@+id/lnEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@color/colorAccent"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/lnLoginView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <com.san.app.font.TextViewAirbnb_bold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="Stella Dahaye"
                            android:textColor="@color/white"
                            android:textSize="@dimen/x_large_text_size" />

                        <com.san.app.font.TextViewAirbnb_book
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="view and edit profile"
                            android:textColor="@color/white"
                            android:textSize="@dimen/med_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnGuestView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.san.app.font.TextViewAirbnb_bold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="Login/Sign Up"
                            android:textColor="@color/white"
                            android:textSize="@dimen/x_large_text_size" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@mipmap/get_started_bg" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lnMyDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/my_detail" />

                        <com.san.app.font.TextViewAirbnb_book
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical"
                            android:text="@string/my_profile"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/med_text_size" />


                    </LinearLayout>

                    <View
                        android:id="@+id/vMyDetail"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/black_color" />


                    <LinearLayout
                        android:id="@+id/lnWishlist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/wish_img" />

                        <com.san.app.font.TextViewAirbnb_book
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical"
                            android:text="@string/wishlist"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/med_text_size" />


                    </LinearLayout>

                    <View
                        android:id="@+id/vWishlist"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/black_color" />


                    <LinearLayout
                        android:id="@+id/lnLang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/lang_icon" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.san.app.font.TextViewAirbnb_book
                                android:id="@+id/tvlan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="20dp"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/tvSelectedLang"
                                android:text="@string/language"
                                android:textColor="@color/black_color"
                                android:textSize="@dimen/med_text_size" />

                            <com.san.app.font.TextViewAirbnb_medium
                                android:id="@+id/tvSelectedLang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/black_color"
                                android:textSize="@dimen/med_text_size" />

                        </RelativeLayout>


                    </LinearLayout>

                    <View
                        android:id="@+id/vLang"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/black_color" />


                    <LinearLayout
                        android:id="@+id/lnNotifications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/noti_img" />

                        <com.san.app.font.TextViewAirbnb_book
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical"
                            android:text="@string/notifications"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/med_text_size" />


                    </LinearLayout>

                    <View
                        android:id="@+id/vNoti"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/black_color" />


                    <LinearLayout
                        android:id="@+id/lnChangePwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/change_pwd" />

                        <com.san.app.font.TextViewAirbnb_book
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical"
                            android:text="@string/change_password"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/med_text_size" />


                    </LinearLayout>

                    <View
                        android:id="@+id/vChangePwd"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/black_color" />


                    <LinearLayout
                        android:id="@+id/lnAbout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/about_us_img" />

                        <com.san.app.font.TextViewAirbnb_book
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical"
                            android:text="@string/about_us"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/med_text_size" />


                    </LinearLayout>

                    <View
                        android:id="@+id/vAbout"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/black_color" />


                    <LinearLayout
                        android:id="@+id/lnLogout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/logout" />

                        <com.san.app.font.TextViewAirbnb_book
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical"
                            android:text="@string/logout"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/med_text_size" />


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>